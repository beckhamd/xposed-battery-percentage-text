<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_lock_screen_category">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_lock_screen"
            android:summary="@string/pref_enable_lock_screen_summary"
            android:title="@string/pref_enable_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="0"
            android:entries="@array/position_options"
            android:entryValues="@array/position_values"
            android:key="pref_lock_screen_position"
            android:title="@string/pref_position_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="1"
            android:entries="@array/font_size_options"
            android:entryValues="@array/font_size_values"
            android:key="pref_lock_screen_font_size"
            android:title="@string/pref_font_size_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="2"
            android:entries="@array/font_style_options"
            android:entryValues="@array/font_style_values"
            android:key="pref_lock_screen_font_style"
            android:title="@string/pref_font_style_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_notification_shade_header_category">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_notification_shade_header"
            android:summary="@string/pref_enable_notification_shade_header_summary"
            android:title="@string/pref_enable_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="0"
            android:entries="@array/position_options"
            android:entryValues="@array/position_values"
            android:key="pref_notification_shade_header_position"
            android:title="@string/pref_position_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="1"
            android:entries="@array/font_size_options"
            android:entryValues="@array/font_size_values"
            android:key="pref_notification_shade_header_font_size"
            android:title="@string/pref_font_size_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="2"
            android:entries="@array/font_style_options"
            android:entryValues="@array/font_style_values"
            android:key="pref_notification_shade_header_font_style"
            android:title="@string/pref_font_style_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_status_bar_category">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_status_bar"
            android:summary="@string/pref_enable_status_bar_summary"
            android:title="@string/pref_enable_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="0"
            android:entries="@array/position_options"
            android:entryValues="@array/position_values"
            android:key="pref_status_bar_position"
            android:title="@string/pref_position_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="1"
            android:entries="@array/font_size_options"
            android:entryValues="@array/font_size_values"
            android:key="pref_status_bar_font_size"
            android:title="@string/pref_font_size_title" />
        <com.extrinsic.batterypercentagetext.ListPreferenceHelper
            android:defaultValue="2"
            android:entries="@array/font_style_options"
            android:entryValues="@array/font_style_values"
            android:key="pref_status_bar_font_style"
            android:title="@string/pref_font_style_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_miscellaneous_category">
        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_hide_launcher_icon"
            android:summary="@string/pref_hide_launcher_icon_summary"
            android:title="@string/pref_hide_launcher_icon_title" />
    </PreferenceCategory>

</PreferenceScreen>
